{% extends 'page.twig' %}

{% import 'form.twig' as f %}

{% block title %}
    {{context.user.login}}'s apps
{% endblock title %}

{% block pageheader %}
{% endblock pageheader %}

{% block main %}
    <div class="container">
        <h2>Apps List</h2>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>App Name</th>
                    <th>Author</th>
                    <th>Size</th>
                    <th>Year</th>
                    <th>Restriction</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for a in apps %}
                    <tr>
                        {% if a.extension == 'docx' %}
                            <td>
                                <img src="assets/images/docx-24px.png">
                            </td>
                        {% elseif a.extension == 'pdf' %}
                            <td>
                                <img src="assets/images/pdf-24px.png">
                            </td>
                        {% else %}
                            <td>
                                <img src="assets/images/text-24px.png">
                            </td>
                        {% endif %}

                        <td>{{a.name}}</td>
                        <td>{{a.author}}</td>
                        <td>{{a.size}} KB</td>
                        <td>{{a.year}}</td>
                        <td>{{a.restriction}}</td>
                        <td>
                            <a href="{{a.directory}}{{a.name}}" download>
                                <img src="assets/images/download-24px.png">
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}