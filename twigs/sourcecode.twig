{% extends 'page.twig' %}

{% import 'form.twig' as f %}

{% block title %}
    {{context.user.login}}'s' source code
{% endblock title %}

{% block pageheader %}
{% endblock pageheader %}

{% block main %}
    <div class="container">
        <h2>Source Code</h2>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Source code Name</th>
                    <th>Author</th>
                    <th>Size</th>
                    <th>Year</th>
                    <th>Restriction</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for s in sourcecode %}
                    <tr>
                        {% if s.extension == 'docx' %}
                            <td>
                                <img src="assets/images/docx-24px.png">
                            </td>
                        {% elseif s.extension == 'pdf' %}
                            <td>
                                <img src="assets/images/pdf-24px.png">
                            </td>
                        {% else %}
                            <td>
                                <img src="assets/images/text-24px.png">
                            </td>
                        {% endif %}

                        <td>{{s.name}}</td>
                        <td>{{s.author}}</td>
                        <td>{{s.size}} KB</td>
                        <td>{{s.year}}</td>
                        <td>{{s.restriction}}</td>
                        <td>
                            <a href="{{s.directory}}{{s.name}}" download>
                                <img src="assets/images/download-24px.png">
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}